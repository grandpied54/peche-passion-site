{
  "version": 2,
  "cleanUrls": false,
  "trailingSlash": false,
  "routes": [
    { "src": "^/$", "dest": "/index.html" },

    {
      "src": "^/sitemap\\.xml$",
      "dest": "/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml; charset=utf-8",
        "Cache-Control": "public, max-age=3600"
      }
    },

    {
      "src": "^/robots\\.txt$",
      "dest": "/robots.txt",
      "headers": {
        "Content-Type": "text/plain; charset=utf-8",
        "Cache-Control": "public, max-age=3600"
      }
    },

    { "src": "^/(.*)$", "dest": "/$1" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}
