{
  "version": 2,
  "cleanUrls": false,
  "trailingSlash": false,

  "routes": [
    { "src": "^/sitemap\\.xml$", "dest": "/sitemap.xml", "headers": { "Content-Type": "application/xml" } },
    { "src": "^/robots\\.txt$", "dest": "/robots.txt", "headers": { "Content-Type": "text/plain" } },
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/(.*)$", "dest": "/$1" }
  ],

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    }
  ]
}
